{
  "name": "Sirea Extension",
  "description": "A Chrome Extension to automate SIREA's RPV and Precat√≥rio migration",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "React Extension",
    "default_icon": "img/icon.png"
  },
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://sistemas.trf1.jus.br/sirea/*"],
      "js": ["contentScript.js"]
    }
  ]
}
